{% extends 'base.html.twig' %}

{% block body %}

    <div class="container mt-4">
        <h1>Nos derniers articles</h1>
        {% if posts == null %}
            <div class="alert alert-warning">
                Aucun articles de trouver
                <a href="{{ path('home') }}">Revenir Ã  l'accueil</a>
            </div>
        {% else %}
            {% for post in posts %}
                <div class="card" style="margin-top: 4px;">
                    <div class="card-body">
                        <h5 class="card-title"><a href="{{ path('blog.show', {slug: post.slug}) }}">{{ post.name }}</a></h5>
                        <div class="card-text">{{ post.content }}</div>
                        <a href="{{ path('blog.show', {slug: post.slug}) }}" class="btn btn-primary">Voir l'article</a>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>

{% endblock %}

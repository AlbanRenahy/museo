<div class="col-12 md-12">
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th>Nom</th>
            <th>Cr√©er le</th>
            <th>Actions</th>
        </tr>
        </thead>

        <tbody>
        {% for category in categories %}
        <tr>
            <td>{{ category.id }}</td>
            <td>{{ category.name }}</td>
            <td>{{ category.createdAt|date("d/m/Y") }}</td>
            <td>
                <a href="{{ path('dashboard.category.edit', {id: category.id}) }}" class="btn btn-primary"><i class="far fa-edit"></i></a>
                <a href="{{ path('dashboard.category.delete', {id: category.id}) }}" class="btn btn-danger"><i class="far fa-trash-alt"></i></a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
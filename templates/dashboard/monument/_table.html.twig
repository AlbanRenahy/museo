<div class="col-12 md-12">
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th>Nom</th>
            {# <th>Description</th> #}
            <th>Adresse</th>
            <th>Image</th>
            <th>Créer le</th>
            <th>Affiché</th>
            <th>Lat</th>
            <th>Long</th>
            <th>Region</th>
            <th>Catégorie</th>
            <th>P.V</th>
            <th>Actions</th>
        </tr>
        </thead>

        <tbody>
        {% for monument in monuments %}
        <tr>
            <td>{{ monument.id }}</td>
            <td>{{ monument.name }}</td>
            {# <td>{{ monument.description|slice(0, 50) }}</td> #}
            <td>{{ monument.address }}</td>
            {% if monument.image == null %}
                <td><span class="badge badge-danger">Aucune image</span></td>
            {% else %}
                <td>
                    <img src="{{ monument.image }}" alt="" height="50px">
                </td>
            {% endif %}
            <td>{{ monument.createdAt|date("d/m/Y") }}</td>
            {% if monument.available == 1 %}
                <td><span class="badge badge-primary">AFFICHER</span></td>
            {% else %}
                <td><span class="badge badge-primary">NON AFFICHER</span></td>
            {% endif %}
            {# <td>{{ monument.available }}</td> #}
            {% if monument.latitude == null %}
                <td><span class="badge badge-warning">N/R.</span></td>
            {% else %}
                <td><span class="badge badge-warning">{{ monument.latitude }}</span></td>
            {% endif %}
            {% if monument.longitude == null %}
                <td><span class="badge badge-warning">N/R.</span></td>
            {% else %}
                <td><span class="badge badge-warning">{{ monument.longitude }}</span></td>
            {% endif %}
            {% if monument.region == null %}
                <td><span class="badge badge-warning">N/R.</span></td>
            {% else %}
                <td><span class="badge badge-primary">{{ monument.region }}</span></td>
            {% endif %}
            {% if monument.category == null %}
                <td><span class="badge badge-warning">N/R.</span></td>
            {% else %}
                <td><span class="badge badge-success">{{ monument.category }}</span></td>
            {% endif %}
            {% if monument.target == null %}
                <td><span class="badge badge-warning">N/R.</span></td>
            {% else %}
                <td><span class="badge badge-info">{{ monument.target }}</span></td>
            {% endif %}
            <td>
                <a href="{{ path('dashboard.monument.edit', {id: monument.id}) }}" class="btn btn-sm btn-primary"><i class="far fa-edit"></i></a>
                <a href="{{ path('dashboard.monument.delete', {id: monument.id}) }}" class="btn btn-sm btn-danger"><i class="far fa-trash-alt"></i></a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<div class="col-12 md-12">
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th>Nom d'utilisateur</th>
            <th>Adresse e-mail</th>
            <th>Prénom</th>
            <th>Nom de famille</th>
            <th>Créer le</th>
            <th>Compte actif</th>
            <th>Actions</th>
        </tr>
        </thead>

        <tbody>
        {% for user in users %}
        <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.username }}</td>
            <td>{{ user.email }}</td>
            {% if user.firstname == null %}
                <td><span class="badge badge-warning">N/R.</span></td>
            {% else %}
                <td><span class="badge badge-info">{{ user.firstname }}</span></td>
            {% endif %}
            {% if user.lastname == null %}
                <td><span class="badge badge-warning">N/R.</span></td>
            {% else %}
                <td><span class="badge badge-info">{{ user.lastname }}</span></td>
            {% endif %}
            <td>{{ user.createdAt|date("d/m/Y") }}</td>
            {% if user.isActive == 1 %}
                <td><span class="badge badge-primary">ACTIF</span></td>
            {% else %}
                <td><span class="badge badge-primary">NON ACTIF</span></td>
            {% endif %}
            <td>
                <a href="{{ path('dashboard.user.edit', {id: user.id}) }}" class="btn btn-sm btn-primary"><i class="far fa-edit"></i></a>
                <a href="{{ path('dashboard.user.delete', {id: user.id}) }}" class="btn btn-sm btn-danger"><i class="far fa-trash-alt"></i></a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>